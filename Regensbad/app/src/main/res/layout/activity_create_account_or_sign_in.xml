
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tom.regensbad.Activities.CreateAccountOrSignInActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/background_for_activities">


    <View
        android:id="@+id/view_to_keep_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <TextView
        android:id="@+id/text_view_sign_in_with_account"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:text="@string/create_an_account"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:textColor="@color/white"/>

    <View
        android:id="@+id/view_to_keep_margin_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/edit_text_username"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:hint="@string/username"
            android:textColorHint="@color/blue_primary_color"
            android:textSize="15sp"
            android:background="@drawable/edit_text_shape"
            android:paddingLeft="15dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="10dp">

        <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:hint="@string/password"
                android:password="true"
                android:textSize="15sp"
                android:textColorHint="@color/blue_primary_color"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_shape"
                />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center">

            <Button
                android:id="@+id/button_sign_in"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:text="@string/sign_in"
                android:textSize="15sp"
                android:background="@drawable/button_selector"
                android:textColor="@drawable/button_text_color"
                />

    </LinearLayout>


    <View
        android:id="@+id/view_to_keep_margin_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/text_view_forgot_password"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="40dp"
            android:text="@string/forgot_password"
            android:textSize="15sp"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/text_view_selector"
            android:gravity="center"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="4"
        >

        <TextView
            android:id="@+id/text_view_create_an_account"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="@string/create_an_account"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center">

        <Button
            android:id="@+id/button_create_new_account"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="@string/create_new_account"
            android:textSize="15sp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/button_text_color"
            />

    </LinearLayout>

</LinearLayout>
