<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@drawable/background_for_activities">
    
    <ImageView
        android:id="@+id/image_view_app_icon"
        android:layout_width="match_parent"
        android:layout_weight="1.4"
        android:layout_height="0dp"
        android:contentDescription="@string/app_icon_content_description"/>

    <TextView
        android:id="@+id/text_view_app_name"
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:layout_height="0dp"
        android:layout_marginBottom="-10dp"
        android:text="@string/app_name"

        android:textSize="50sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/text_view_login"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="@string/login_with_user_account"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center"
        >

        <Button
            android:id="@+id/button_login"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/button_login"
            android:textSize="15sp"
            android:background="@drawable/button_selector"
            android:textColor="@drawable/button_text_color"
            android:drawableRight="@drawable/button_icon_selector_perm_identity"
            android:paddingRight="20dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

    <Button
        android:id="@+id/button_skip"
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="@string/button_skip"
        android:textSize="15sp"
        android:background="@drawable/button_selector"
        android:textColor="@drawable/button_text_color"
        android:drawableRight="@drawable/button_icon_selector_label_outline"
        android:paddingRight="13dp"
        />

    </LinearLayout>





</LinearLayout>
