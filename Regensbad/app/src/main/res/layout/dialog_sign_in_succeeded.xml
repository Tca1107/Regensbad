<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    
    <ImageView
        android:id="@+id/image_view_succesful_registration"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:contentDescription="@string/submission_succesful_description"
        android:src="@drawable/succesful_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/submission_succeeded"
        android:layout_below="@+id/image_view_succesful_registration"
        android:textSize="20dp"
        android:gravity="center"
        />



</RelativeLayout>